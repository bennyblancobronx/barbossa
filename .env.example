# Barbossa Music Library - Environment Configuration
# Copy to .env and update values before starting

# =============================================================================
# REQUIRED
# =============================================================================

# Database password (change this!)
DB_PASSWORD=barbossa

# JWT secret for authentication (change this! use: openssl rand -hex 32)
JWT_SECRET=change-me-in-production-use-random-string-at-least-32-chars

# =============================================================================
# MUSIC PATHS
# =============================================================================
# Root music path on host - gets mounted to /music in container
# All subdirectories are relative to this path:
#   /artists   - Master library (Artist/Album (Year)/tracks)
#   /users     - Per-user symlinked libraries
#   /downloads - Temp download staging
#   /import    - Watch folder for imports
#   /database  - Database backups
#   /export    - Export destination

MUSIC_PATH=/Volumes/media/library/music

# Host path for UI display (usually same as MUSIC_PATH)
MUSIC_PATH_HOST=/Volumes/media/library/music

# =============================================================================
# QOBUZ (required for hi-res downloads)
# =============================================================================

QOBUZ_EMAIL=your-email@example.com
QOBUZ_PASSWORD=your-password

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Lidarr - Automated music collection
LIDARR_URL=http://lidarr:8686
LIDARR_API_KEY=

# Plex - Media server integration
PLEX_URL=http://plex:32400
PLEX_TOKEN=
PLEX_MUSIC_SECTION=

# TorrentLeech - Torrent uploads (admin only)
TORRENTLEECH_KEY=

# Bandcamp - Collection sync
BANDCAMP_COOKIES=/config/bandcamp-cookies.txt

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=info
# LOG_PATH=/var/log/barbossa/app.log  # Optional file logging

# =============================================================================
# SECURITY
# =============================================================================

# CORS allowed origins (comma-separated, use your domain in production)
CORS_ORIGINS=https://barbossa.local,https://localhost

# =============================================================================
# ADVANCED (usually don't need to change)
# =============================================================================

# Database
DATABASE_URL=postgresql://barbossa:${DB_PASSWORD}@db:5432/barbossa

# Redis
REDIS_URL=redis://redis:6379/0

# Ports (if you need to change defaults)
API_PORT=8080
FRONTEND_PORT=3000
